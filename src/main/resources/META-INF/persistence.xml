<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- The persistence.xml file is the configuration file for JPA.
It defines persistence units. -->
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                   https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
                 version="3.1">

    <persistence-unit name="hellojpa-pu"
                      transaction-type="RESOURCE_LOCAL">
        <description>Hello JPA Persistence Unit</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- Database connection properties for Java SE -->
            <property name="jakarta.persistence.target-database"
                      value="PostgreSQL" />
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <!-- the value of the following properties is set in the App  -->
            <!--property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost/hellojpa-db" />
            <property name="jakarta.persistence.jdbc.user"
                      value="dba" />
            <property name="jakarta.persistence.jdbc.password"
                      value="secret" /-->

            <!-- Database creation: none, create, drop-and-create -->
            <property name="jakarta.persistence.schema-generation.database.action"
                          value="drop-and-create" />

                <!-- The scripts generated by the schema-generation process are sent to these targets -->
            <property name="jakarta.persistence.schema-generation.scripts.create-target"
                      value="generated-create.ddl" />
            <property name="jakarta.persistence.schema-generation.scripts.drop-target"
                      value="generated-drop.ddl" />

        </properties>
    </persistence-unit>
</persistence>